extends ../default/layout
block content
    .container
        .row
            form.col.s12.m8.l6.card-panel.center-align.login-form.offset-l3
                h2.truncate Login
                .row
                    .input-field.col.s12
                        input.validate#email(type="email")
                        label(for="email") Email
                .row
                    .input-field.col.s12
                        input.validate#password(type="password")
                        label(for="password") Password

                a.waves-effect.waves-light.btn Login
                small
                    h6
                        a.account(href="/register") Don't have an account?
