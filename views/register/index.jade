extends ../default/layout
block content
    .register-page
        .container
            .row(style="margin-bottom:0")
                form.col.s12.m8.l6.card-panel.center-align.login-form.offset-l3(action="/register" method="post")
                    h2.truncate Register
                    .row
                        .input-field.col.s12
                            input.validate#firstname(type="text" name="firstname")
                            label(for="firstname") Firstname
                    .row
                        .input-field.col.s12
                            input.validate#lastname(type="text" name="lastname")
                            label(for="lastname") Lastname
                    .row
                        .input-field.col.s12
                            input.validate#email(type="email" name="email")
                            label(for="email") Email
                    .row
                        .input-field.col.s12
                            input.validate#password(type="password" name="password")
                            label(for="password") Password
                    button(type="submit").waves-effect.waves-light.btn Register
